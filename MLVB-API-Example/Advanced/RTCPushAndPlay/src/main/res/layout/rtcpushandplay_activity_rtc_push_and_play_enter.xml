<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1B1B1B">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal"
        android:text="@string/rtcpushandplay_rtc_push_and_play"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/ll_stream_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:text="@string/rtcpushandplay_please_input_streamid" />

            <EditText
                android:id="@+id/et_stream_id"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="5dp"
                android:textSize="16sp"
                android:text="235672"
                android:background="@drawable/common_edit_bg"
                android:layout_marginTop="5dp"/>
        </LinearLayout>



        <TextView
            android:id="@+id/tv_role"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:text="@string/rtcpushandplay_please_select_role" />

        <RadioGroup
            android:layout_marginLeft="30dp"
            android:layout_width="300dp"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:gravity="fill_horizontal"
            android:orientation="horizontal"
            android:id="@+id/rg_role">

            <RadioButton
                android:id="@+id/rb_anchor"
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:gravity="center"
                android:textSize="14sp"
                android:text="@string/rtcpushandplay_anchor"
                android:buttonTint="#0062e3"
                android:textColor="@android:color/white"/>

            <RadioButton
                android:id="@+id/rb_audience"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:gravity="center"
                android:textSize="14sp"
                android:text="@string/rtcpushandplay_audience"
                android:buttonTint="#0062e3"
                android:textColor="@android:color/white"/>
        </RadioGroup>

        <LinearLayout
            android:layout_margin="30dp"
            android:background="#999999"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:paddingBottom="50dp">

            <TextView
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/rtcpushandplay_process_description"
                />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_commit"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:text="@string/rtcpushandplay_rtc_push"
        android:background="@drawable/common_button_bg"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_height="50dp"/>
</RelativeLayout>
